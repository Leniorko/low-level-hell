{
  "tasks": [
    {
      // Master task for starting debug session
      "type": "cppbuild",
      "label": "CleanAndBuild",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${workspaceFolder}/main.c",
        "-o",
        "${workspaceFolder}/build/main",
        // Links X11
        "-lX11"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["Clean"],
      "detail": "Task generated by Debugger."
    },
    {
      // Removes main build
      // Probably should switch from hardcoded filename but it works for now.
      "type": "shell",
      "label": "Clean",
      "command": "rm",
      "args": ["-f", "${workspaceFolder}/build/main"]
    }
  ],
  "version": "2.0.0"
}
